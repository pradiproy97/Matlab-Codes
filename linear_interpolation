clear all
close all
n = 10;
xi= linspace(-1,1,n);
yi= [3 2 2 1 0 -3 -4 1 2 4];
plot (xi,yi,'o','MarkerSize',10,'MarkerFaceColor','r','MarkerEdgeColor','k');
hold on;
N = 1000;
for i = 1:n-1
    x0 = xi(i); x1 = xi(i+1);
    y0 = yi(i); y1 = yi(i+1);
    x = linspace(x0,x1,N);
    y = y0 + (x-x0)*(y1-y0)/(x1-x0);
    plot (x,y);
end
